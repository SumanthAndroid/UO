<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_detail_accessibility_options_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/fragment_detail_accessibility_options_top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/detail_divider_gray" />

    <RelativeLayout
        android:id="@+id/fragment_detail_accessibility_options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <LinearLayout
            android:id="@+id/fragment_detail_accessibility_options_icon_horiz_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="24dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_detail_accessibility_options_icon_vert_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="8dp"
            android:visibility="gone" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_detail_accessibility_options_expand_collapse_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/detail_divider_gray" />

        <RelativeLayout
            android:id="@+id/fragment_detail_accessibility_options_expand_collapse_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/state_list_detail_expand_collapse_circle_button_with_fade"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:id="@+id/fragment_detail_accessibility_options_expand_collapse_button_icon_down"
                android:layout_width="21dp"
                android:layout_height="13dp"
                android:layout_marginTop="3dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_detail_expand_collapse_arrow_down"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/fragment_detail_accessibility_options_expand_collapse_button_icon_up"
                android:layout_width="21dp"
                android:layout_height="13dp"
                android:layout_marginBottom="1dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_detail_expand_collapse_arrow_up"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/detail_divider_gray" />
    </LinearLayout>

</LinearLayout>