<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_ons_wizard_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.userinterface.addons.AddOnsWizardActivity">

    <FrameLayout
        android:id="@+id/activity_add_ons_wizard_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_add_ons_progress_container"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        tools:layout="@layout/fragment_add_on_select_tier"/>

    <FrameLayout
        android:id="@+id/activity_add_ons_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_add_on_progress"/>

    <ProgressBar
        android:id="@+id/activity_add_ons_wizard_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>