<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_detail_show_time_list_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/fragment_detail_show_time_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:gravity="center_vertical"
            android:overScrollMode="never"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/fragment_detail_show_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <com.universalstudios.orlandoresort.view.fonts.TextView
            android:id="@+id/fragment_detail_show_time_list_bottom_text"
            style="@style/TextViewStyle.GothamBookItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/detail_show_time_list_no_more_shows"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/fragment_detail_show_time_list_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/detail_divider_gray" />

</LinearLayout>