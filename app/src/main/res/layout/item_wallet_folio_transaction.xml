<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/detail_divider_gray" />
    <com.universalstudios.orlandoresort.view.fonts.TextView
        style="@style/TextViewStyle.GothamBold"
        android:id="@+id/wallet_folio_item_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        tools:text="SpongeBob StorePants"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="12dp"
        />
    <com.universalstudios.orlandoresort.view.fonts.TextView
        style="@style/TextViewStyle.GothamBold"
        android:id="@+id/wallet_folio_item_transaction_subtitle_price"
        android:layout_below="@+id/wallet_folio_item_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        tools:text="$23.45"/>
    <com.universalstudios.orlandoresort.view.fonts.TextView
        style="@style/TextViewStyle.GothamBook"
        android:id="@+id/wallet_folio_item_transaction_subtitle_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="10sp"
        tools:text="Yesterday, 1:15 PM, by Mary"
        android:layout_below="@+id/wallet_folio_item_transaction_subtitle_price"/>

    <ImageButton
        android:id="@+id/wallet_folio_item_transaction_drop_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_expand"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>