<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_detail_package_pickup_hero_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/universal_packagepickup_hero_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/fragment_detail_package_pickup_title_text"
                style="@style/TextViewStyle.GothamBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:text="@string/detail_basic_info_package_pickup_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/fragment_detail_package_pickup_desc_text"
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:autoLink="web"
                android:lineSpacingExtra="6dp"
                android:text="@string/detail_basic_info_package_pickup_description"
                android:textColor="@color/text_gray_darker"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Universal Pass and Buy in Park feature buttons added at runtime -->

        <LinearLayout
            android:id="@+id/fragment_detail_package_pickup_buton_root_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</ScrollView>