<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.universalstudios.orlandoresort.view.fonts.TextView
            style="@style/TextViewStyle.GothamBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="18dp"
            android:lineSpacingExtra="6dp"
            android:text="@string/dining_plan_intro"
            android:textColor="@color/text_gray_darker"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/detail_divider_gray" />

            <com.universalstudios.orlandoresort.view.fonts.TextView
                style="@style/TextViewStyle.DividerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/dining_plan_header_options"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/detail_divider_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_detail_dining_plan_universal_dining_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/state_list_default_list_selector_with_fade"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="43dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dining_plan_logo" />

                <com.universalstudios.orlandoresort.view.fonts.TextView
                    style="@style/TextViewStyle.GothamBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/dining_plan_title"
                    android:textColor="@color/text_gray_darker"
                    android:textSize="17sp" />

            </LinearLayout>

            <com.universalstudios.orlandoresort.view.fonts.TextView
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6dp"
                android:text="@string/dining_plan_description"
                android:textColor="@color/text_gray_darker"
                android:textSize="15sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextViewStyle.GothamBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="6dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="@string/dining_plan_see_participating_locations"
                    android:textColor="@color/text_gray_darker"
                    android:textSize="15sp" />

                <ImageView
                    android:src="@drawable/ic_chevron_right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/detail_divider_gray" />

        <LinearLayout
            android:id="@+id/fragment_detail_dining_plan_quick_service_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/state_list_default_list_selector_with_fade"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="43dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dining_plan_quick_service_logo" />

                <com.universalstudios.orlandoresort.view.fonts.TextView
                    style="@style/TextViewStyle.GothamBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/dining_plan_quick_service_title"
                    android:textColor="@color/text_gray_darker"
                    android:textSize="17sp" />
            </LinearLayout>

            <com.universalstudios.orlandoresort.view.fonts.TextView
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6dp"
                android:text="@string/dining_plan_quick_service_description"
                android:textColor="@color/text_gray_darker"
                android:textSize="15sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextViewStyle.GothamBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="6dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="@string/dining_plan_see_participating_locations"
                    android:textColor="@color/text_gray_darker"
                    android:textSize="15sp" />

                <ImageView
                    android:src="@drawable/ic_chevron_right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>