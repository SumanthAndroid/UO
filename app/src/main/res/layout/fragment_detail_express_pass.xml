<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_detail_express_pass_hero_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/universal_express_hero_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/fragment_detail_express_pass_title_text"
                style="@style/TextViewStyle.GothamBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:text="@string/action_title_express_pass"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/fragment_detail_express_pass_desc_text"
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:autoLink="web"
                android:lineSpacingExtra="6dp"
                android:text="@string/detail_basic_info_express_pass_line_description"
                android:textColor="@color/text_gray_darker"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Universal Pass and Buy in Park feature buttons added at runtime -->

        <LinearLayout
            android:id="@+id/fragment_detail_express_buton_root_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <!-- Terms notice -->
        <FrameLayout
            android:id="@+id/fragment_detail_express_pass_restrictions_viewgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/detail_divider_gray"/>

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/fragment_detail_express_pass_restrictions_textview"
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/state_list_default_list_selector_with_fade"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/detail_basic_info_express_pass_restrictions_apply"
                android:textColor="@color/text_primary"
                android:textSize="14sp"/>
        </FrameLayout>

    </LinearLayout>

</ScrollView>