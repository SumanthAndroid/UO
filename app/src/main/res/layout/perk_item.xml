<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perk_item_root_container"
    android:layout_width="@dimen/detail_hotel_perk_width"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/card_background_gray"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="40dp" >

        <com.universalstudios.orlandoresort.view.fonts.TextView
            android:id="@+id/perk_item_title_text"
            style="@style/TextViewStyle.GothamBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:text="@string/detail_perks_skip_the_regular_lines_title"
            android:textColor="@color/text_gray_darker"
            android:textSize="13sp" />

        <com.universalstudios.orlandoresort.view.fonts.TextView
            android:id="@+id/perk_item_description_text"
            style="@style/TextViewStyle.GothamBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3dp"
            android:maxLines="12"
            android:text="@string/detail_perks_skip_the_regular_lines_description"
            android:textColor="@color/text_gray_darker"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/perk_item_icon"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_detail_perk_free_express" />

</RelativeLayout>