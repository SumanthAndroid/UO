<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_circle_badge_alert_blue"
    android:layout_width="261dp"
    android:layout_height="261dp" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/wait_time_alert_badge_shadow_padding"
        android:gravity="center"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/wait_time_alert_badge_shadow_padding"
        android:background="@drawable/shape_circle_badge_alert_blue"
        android:gravity="center"
        android:orientation="vertical" >

        <com.universalstudios.orlandoresort.view.fonts.TextView
            android:id="@+id/flip_wait_time_item_minutes_text"
            style="@style/TextViewStyle.GothamUltra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="X05"
            android:textColor="@color/text_white"
            android:textSize="@dimen/set_alert_text_size" />

        <com.universalstudios.orlandoresort.view.fonts.TextView
            style="@style/TextViewStyle.GothamMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_time_alerts_minutes"
            android:textColor="@color/set_alert_time_text"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:alpha="@dimen/set_alert_arrow_alpha"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/flip_wait_time_item_up_arrow"
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_margin="1dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_alert_arrow_down" />

            <ImageView
                android:id="@+id/flip_wait_time_item_down_arrow"
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_margin="1dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_alert_arrow_up" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</FrameLayout>