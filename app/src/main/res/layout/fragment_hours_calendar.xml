<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/hours_calendar_background_white"
              android:orientation="vertical">

    <com.universalstudios.orlandoresort.view.calendar.CalendarPickerView
        android:id="@+id/fragment_hours_calendar_picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/detail_divider_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_hours_calendar_hollywood_locations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_lighter"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/fragment_hours_calendar_ush_time_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="@dimen/hours_calendar_icon_size"
                    android:layout_height="@dimen/hours_calendar_icon_size"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/hours_calendar_universal_studios_hollywood_content_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home_map_logo_universal_studios_hollywood"/>

                <com.universalstudios.orlandoresort.view.fonts.TextView
                    android:id="@+id/fragment_hours_calendar_ush_time_text"
                    style="@style/TextViewStyle.GothamBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="XAM - 8PM"
                    android:textColor="@color/text_gray_darker"
                    android:textSize="@dimen/hours_calendar_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_hours_calendar_citywalk_hollywood_time_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/hours_calendar_icon_size"
                    android:layout_height="@dimen/hours_calendar_icon_size"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/hours_calendar_citywalk_hollywood_content_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home_map_logo_citywalk_hollywood"/>

                <com.universalstudios.orlandoresort.view.fonts.TextView
                    android:id="@+id/fragment_hours_calendar_citywalk_hollywood_time_text"
                    style="@style/TextViewStyle.GothamBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="XAM - 8PM"
                    android:textColor="@color/text_gray_darker"
                    android:textSize="@dimen/hours_calendar_text_size"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_hours_calendar_orlando_locations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"

            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_hours_calendar_ioa_time_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hours_calendar_icon_size"
                        android:layout_height="@dimen/hours_calendar_icon_size"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/hours_calendar_islands_of_adventure_park_hours_content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_map_logo_islands_of_adventure"/>

                    <com.universalstudios.orlandoresort.view.fonts.TextView
                        android:id="@+id/fragment_hours_calendar_ioa_time_text"
                        style="@style/TextViewStyle.GothamBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="XAM - 8PM"
                        android:textColor="@color/text_gray_darker"
                        android:textSize="@dimen/hours_calendar_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_hours_calendar_usf_time_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hours_calendar_icon_size"
                        android:layout_height="@dimen/hours_calendar_icon_size"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/hours_calendar_universal_studios_florida_park_hours_content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_map_logo_universal_studios_florida"/>

                    <com.universalstudios.orlandoresort.view.fonts.TextView
                        android:id="@+id/fragment_hours_calendar_usf_time_text"
                        style="@style/TextViewStyle.GothamBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="XAM - 8PM"
                        android:textColor="@color/text_gray_darker"
                        android:textSize="@dimen/hours_calendar_text_size"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_hours_calendar_cw_time_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hours_calendar_icon_size"
                        android:layout_height="@dimen/hours_calendar_icon_size"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/hours_calendar_citywalk_park_hours_content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_map_logo_citywalk"/>

                    <com.universalstudios.orlandoresort.view.fonts.TextView
                        android:id="@+id/fragment_hours_calendar_cw_time_text"
                        style="@style/TextViewStyle.GothamBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="XAM - 8PM"
                        android:textColor="@color/text_gray_darker"
                        android:textSize="@dimen/hours_calendar_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_hours_calendar_wnw_time_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hours_calendar_icon_size"
                        android:layout_height="@dimen/hours_calendar_icon_size"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/hours_calendar_wet_n_wild_park_hours_content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_map_logo_wet_n_wild"/>

                    <com.universalstudios.orlandoresort.view.fonts.TextView
                        android:id="@+id/fragment_hours_calendar_wnw_time_text"
                        style="@style/TextViewStyle.GothamBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="XAM - 8PM"
                        android:textColor="@color/text_gray_darker"
                        android:textSize="@dimen/hours_calendar_text_size"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>