<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/list_drawer_item_root_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical|left"
              android:orientation="horizontal"
              android:paddingBottom="4dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="4dp">

    <ImageView
        android:id="@+id/list_drawer_item_icon_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_citywalk" />

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/list_drawer_item_title_text"
        app:font="@string/font_drawer_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Sign In"
        android:textColor="@color/nav_drawer_item_text"
        android:textSize="16sp" />

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/list_drawer_item_number_badge_text"
        style="@style/TextViewStyle.GothamBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_rounded_rect_drawer_badge_blue"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="3"
        android:textColor="@color/text_white"
        android:textSize="15.5sp" />

    <ImageView
        android:id="@+id/list_drawer_item_expand_collapse_icon_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_group_expand" />

</LinearLayout>