<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/contact_guest_services_background_white"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_contact_guest_services_hero_image"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/guest_services_hero" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="29dp"
            android:orientation="vertical" >

            <com.universalstudios.orlandoresort.view.fonts.TextView
                style="@style/TextViewStyle.GothamUltra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/contact_guest_services_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/guestServicesDescription"
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/contact_guest_services_message"
                android:textColor="@color/text_gray_darker"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_contact_guest_services_our_parks_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/detail_divider_gray" />

            <com.universalstudios.orlandoresort.view.fonts.TextView
                style="@style/TextViewStyle.DividerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/contact_guest_services_header_contact_info"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/detail_divider_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_contact_guest_services_options_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>