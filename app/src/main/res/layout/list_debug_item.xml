<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_debug_item_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical" >

    <View
        android:id="@+id/list_debug_item_top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/detail_divider_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/state_list_default_list_selector_with_fade"
        android:gravity="center"
        android:minHeight="67dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="34dp" >

        <ImageView
            android:id="@+id/list_debug_item_icon_image"
            android:layout_width="@dimen/detail_feature_normal_icon_size"
            android:layout_height="@dimen/detail_feature_normal_icon_size"
            android:layout_marginRight="@dimen/detail_feature_icon_margin_right"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_detail_feature_wait_time_alert" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/list_debug_item_primary_text"
                style="@style/TextViewStyle.GothamMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="Xait Time Alert"
                android:textColor="@color/text_gray_darker"
                android:textSize="14sp" />

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/list_debug_item_primary_sub_text"
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_gray_dim"
                android:textSize="13.5sp"
                android:visibility="gone"
                tools:text="Xeservations are suggested"
                tools:visibility="visible"/>
        </LinearLayout>

        <com.universalstudios.orlandoresort.view.fonts.TextView
            android:id="@+id/list_debug_item_secondary_text"
            style="@style/TextViewStyle.GothamMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:text="Xet Alert"
            android:textColor="@color/text_gray_dim"
            android:textSize="14sp" />

        <com.universalstudios.orlandoresort.view.fonts.Switch
            android:id="@+id/list_debug_item_switch"
            style="@style/TextViewStyle.GothamBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:adjustViewBounds="true"
            android:saveEnabled="false"
            android:thumb="@drawable/state_list_blue_switch_inner_holo_light"
            android:track="@drawable/state_list_blue_switch_track_holo_light"
            android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>