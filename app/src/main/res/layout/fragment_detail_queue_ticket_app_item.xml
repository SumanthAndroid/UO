<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/state_list_rounded_corner_textview_ticket">

<com.universalstudios.orlandoresort.view.fonts.TextView
    android:id="@+id/fragment_detail_appointment_time_item_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/TextViewStyle.GothamBold"
    android:gravity="center"
    android:textAlignment="center"
    android:layout_marginRight="3dp"
    android:textColor="@color/text_ticket_app_time_white"
    android:textSize="21sp" />

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/fragment_detail_appointment_time_item_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle.GothamMedium"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/text_ticket_app_time_white"
        android:textSize="12sp" />

    </LinearLayout>