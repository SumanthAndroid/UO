<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/fragment_checkout_days_ticket_text"
        style="@style/TextViewStyle.GothamBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/checkout_text_black"
        android:textSize="14sp" />

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/fragment_checkout_tickets_for_location_text"
        style="@style/TextViewStyle.GothamUltra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1dp"
        android:paddingTop="3dp"
        android:textColor="@color/checkout_text_black"
        android:textSize="17sp" />

    <!--<com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/fragment_checkout_tickets_for_fl_text"
        style="@style/TextViewStyle.GothamUltra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1dp"
        android:paddingTop="3dp"
        android:textColor="@color/checkout_text_black"
        android:textSize="17sp" />-->

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/fragment_checkout_park_to_park_text"
        style="@style/TextViewStyle.GothamMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:textColor="@color/checkout_text_black"
        android:textSize="16sp" />

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/fragment_checkout_adults_cost_text"
        style="@style/TextViewStyle.GothamMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:textColor="@color/checkout_text_black"
        android:textSize="11sp" />

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/fragment_checkout_child_cost_text"
        style="@style/TextViewStyle.GothamMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:layout_marginBottom="10dp"
        android:textColor="@color/checkout_text_black"
        android:textSize="11sp" />


</LinearLayout>