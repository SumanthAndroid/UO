<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_faq_item_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="@dimen/circle_badge_faq_size"
            android:layout_height="@dimen/circle_badge_faq_size"
            android:background="@drawable/shape_circle_badge_faq_blue" >

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/list_faq_item_number_text"
                style="@style/TextViewStyle.GothamUltra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="12"
                android:textColor="@color/text_white"
                android:textSize="20sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="vertical" >

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/list_faq_item_primary_text"
                style="@style/TextViewStyle.GothamUltra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vacation_planner_faq_item_1_title"
                android:textColor="@color/text_primary"
                android:textSize="19sp" />

            <com.universalstudios.orlandoresort.view.fonts.TextView
                android:id="@+id/list_faq_item_secondary_text"
                style="@style/TextViewStyle.GothamBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:autoLink="phone|web|email"
                android:lineSpacingExtra="5dp"
                android:text="@string/vacation_planner_faq_item_1_message"
                android:textColor="@color/text_gray_darker"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>