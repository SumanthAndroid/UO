<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/list_item_parking_section_header_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/list_item_parking_section_header_text"
        style="@style/TextViewStyle.GothamMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/parking_garage_header_background"
        android:gravity="center"
        android:padding="8dp"
        android:textAllCaps="true"
        android:textColor="@color/text_gray_darker"
        android:textSize="15sp"
        tools:text="Section Header"/>
</LinearLayout>