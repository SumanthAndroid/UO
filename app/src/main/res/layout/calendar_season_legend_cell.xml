<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:id="@+id/calendar_season_legend_cell_square"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_calendar_season_legend_square"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            tools:text="VALUE"
            android:id="@+id/calendar_season_legend_cell_text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textStyle="bold"/>
        <TextView
            tools:text="Valid on low season ONLY"
            android:id="@+id/calendar_season_legend_cell_text_description"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendar_season_legend_cell_text_header"
            android:textColor="@color/text_gray"
            android:textStyle="italic"/>
    </RelativeLayout>
</LinearLayout>