<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@color/search_list_no_image_background_gray">

            <ImageView
                android:id="@+id/list_appointment_ticket_item_no_image_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_no_image_logo_search"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/list_appointment_ticket_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_item_poi_search_circle_image_mask" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/state_list_search_circle_image_mask_selector_with_fade" />
        </FrameLayout>

    </LinearLayout>


    <com.universalstudios.orlandoresort.view.fonts.TextView
        android:id="@+id/ticket_appointment_ticket_name"
        style="@style/TextViewStyle.GothamBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center|center_horizontal"
        android:maxLines="1"
        android:text="Harry Potter and the Forbidden Journey"
        android:textAlignment="center"
        android:textColor="@color/blue_color"
        android:textSize="22sp" />


</LinearLayout>