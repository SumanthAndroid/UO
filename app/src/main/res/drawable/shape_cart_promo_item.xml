<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <stroke
                android:width="2dp"
                android:color="#CCCCCC" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">

        <shape>
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#EEEEEE" />
        </shape>

    </item>
</layer-list>