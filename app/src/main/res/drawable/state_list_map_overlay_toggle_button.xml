<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state - touch press or D-pad / physical keyboard click -->
    <item android:drawable="@drawable/map_button_circle_on" android:state_pressed="true"/>

    <!-- Toggle state on -->
    <item android:drawable="@drawable/map_button_circle_on" android:state_checked="true"/>

    <!-- Toggle state off -->
    <item android:drawable="@drawable/map_button_circle_off" android:state_checked="false"/>

</selector>