<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/custom_calendar_border"/>

            <solid android:color="@color/state_list_select_date_selector_background"/>
        </shape>
    </item>
    <item>
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="21"
            android:useLevel="false">
            <solid android:color="@color/custom_calendar_selected_circle"/>
            <size
                android:width="18dp"
                android:height="18dp"/>
        </shape>
    </item>
</layer-list>