<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Pressed state - touch press or D-pad / physical keyboard click -->
    <item android:drawable="@color/purple_dark" android:state_pressed="true"/>

    <!-- Toggle state on -->
    <item android:drawable="@color/purple_light" app:state_checked="true"/>

    <!-- Toggle state off -->
    <item android:drawable="@color/purple" app:state_checked="false"/>

</selector>